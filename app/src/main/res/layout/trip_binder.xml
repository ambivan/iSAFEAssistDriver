<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#fff">

    <android.support.v7.widget.CardView
        android:id="@+id/tripcard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"

        android:background="@drawable/layout_swipe"
        android:elevation="10dp"
        android:padding="15dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/servicetype"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="Type of Service"
                android:textColor="#000"
                android:textSize="20dp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"

                android:background="@drawable/shade_text"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/serviceprice"
                    android:layout_width="160dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center|top"
                    android:layout_margin="10dp"
                    android:background="@drawable/textbackground"
                    android:gravity="center"
                    android:text="200/-"
                    android:textColor="#fff"
                    android:textSize="24dp" />
            </LinearLayout>

            <TextView
                android:id="@+id/serviceuname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="10dp"
                android:gravity="center_horizontal"
                android:text="Name"
                android:textColor="#000"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/serviceuphone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="10dp"
                android:autoLink="phone"
                android:gravity="center_horizontal"
                android:text="Phone Number"
                android:textColor="#000"
                android:textSize="20dp" />


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="20dp"
                android:background="@android:color/darker_gray" />

            <TextView
                android:id="@+id/datetime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="10dp"
                android:gravity="center_horizontal"
                android:text="Date and time"
                android:textColor="#000"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/locationofservice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="10dp"
                android:gravity="center_horizontal"
                android:text="Location"
                android:textColor="#000"
                android:textSize="20dp" />
        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>